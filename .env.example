# 化学UNO - 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 服务器配置
NODE_ENV=production
PORT=5000

# 客户端配置
CLIENT_PORT=4000
REACT_APP_API_URL=http://localhost:5000

# 管理员密码（用于访问 /admin 管理面板）
REACT_APP_ADMIN=your_admin_password_here

# CORS 允许的源（生产环境请设置为实际域名）
ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000

# 日志级别
LOG_LEVEL=info

# 游戏配置
MAX_PLAYERS=12
GAME_TIMEOUT=3600000

# 数据库路径（如果使用）
CONFIG_PATH=./config.json
