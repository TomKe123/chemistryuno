{
  "name": "chemistry-uno",
  "version": "1.1.0",
  "description": "一个将化学知识融入的创意卡牌游戏",
  "main": "server/index.ts",
  "scripts": {
    "start": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "cd server && pnpm start",
    "client": "cd client && pnpm start",
    "dev": "concurrently \"cd server && pnpm run dev\" \"cd client && pnpm start\"",
    "build": "cd client && pnpm run build",
    "build:server": "cd server && tsc",
    "build:all": "pnpm run build && pnpm run build:server",
    "install-all": "pnpm install",
    "clean": "rm -rf server/node_modules client/node_modules node_modules server/pnpm-lock.yaml client/pnpm-lock.yaml pnpm-lock.yaml server/dist",
    "update": "pnpm update -r",
    "audit": "pnpm audit",
    "audit-fix": "pnpm audit --fix",
    "health": "ts-node healthcheck.ts",
    "docker:build": "docker-compose -f docker-compose.production.yml build",
    "docker:up": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.production.yml restart",
    "deploy:prod": "pwsh -File deploy-production.ps1",
    "deploy:prod:clean": "pwsh -File deploy-production.ps1 -Clean",
    "deploy:prod:ssl": "pwsh -File deploy-production.ps1 -WithSSL",
    "deploy:prod:skip-build": "pwsh -File deploy-production.ps1 -SkipBuild"
  },
  "keywords": [
    "chemistry",
    "game",
    "uno",
    "card",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "repository": {
    "type": "git",
    "url": ""
  }
}
